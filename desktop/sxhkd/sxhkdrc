# Custom resize
alt + shift + {h,j,k,l}
    /home/zoso/.config/bspwm/scripts/bspwm_resize {west,south,north,east}

# Para abrir firefox developer edition
alt + f
    /usr/bin/firefox-developer-edition





# Parte de los atajos de F1 a F12

# Subir volumen
XF86AudioRaiseVolume
    pamixer -i 5

# Bajar volumen
XF86AudioLowerVolume
    pamixer -d 5

# Silenciar
XF86AudioMute
    pamixer -t

# Reproducir/Pausar
XF86AudioPlay
    playerctl play-pause

# Siguiente pista
XF86AudioNext
    playerctl next

# Pista anterior
XF86AudioPrev
    playerctl previous

# Subir brillo
XF86MonBrightnessUp
    xbacklight -inc 10

# Bajar brillo
XF86MonBrightnessDown
    xbacklight -dec 10



# # abrir el scrot
# alt + s
#     /usr/bin/scrot


# abrir Neovide
alt + n
	/usr/bin/neovide


# abrir thunar
alt + t
	/usr/bin/thunar

# ejecutar flameshot
alt + s
    /usr/bin/spectacle -r
